{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header">
	    <section class="header-background"{{#if @blog.cover_image}} style="background-image: url({{img_url @blog.cover_image}}){{else}}no-cover{{/if}}"></section>
   		<section id="title" class="page-title">{{@blog.title}}</section>
</header>
{{! The main content area on the homepage }}
<main id="content" class="content P-animated" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</main>
