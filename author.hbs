{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}

{{! Everything inside the #author tags pulls data from the author }}
{{#author}}
    <header class="main-header author-header">
        <section class="header-background"{{#if tag.feature_image}} style="background-image: url({{tag.feature_image}}){{else}}no-cover{{/if}}"></section>
        <section id="author-img">
            <img src="{{img_url profile_image}}" alt="{{name}}">
        </section>
        <section id="author-name">
            {{name}}
        </section>
    </header>
{{/author}}
{{! The main content area on the homepage }}
<main class="content P-animated" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
