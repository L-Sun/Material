<nav class="pagination" role="navigation">
    {{#if prev}}
    <a class="mdc-icon-button material-icons mdc-ripple-surface" href="{{page_url prev}}">navigate_before</a>
    {{else}}
    <button class="mdc-icon-button" disabled></button>
    {{/if}}
    <div class="page-number">
        <span>{{page}}</span> / {{pages}}
    </div>
    {{#if next}}
    <a class="mdc-icon-button material-icons mdc-ripple-surface" href="{{page_url next}}">navigate_next</a>
    {{else}}
    <button class="mdc-icon-button" disabled></button>
    {{/if}}
</nav>