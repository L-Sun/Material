{{! This is the post loop - each post will be output using this markup }}
<div id="post-list">
    {{#foreach posts}}
    <article class="{{post_class}} post-card">
        <header class="post-header {{#if feature_image}}" style="background-image: url({{img_url feature_image}}){{else}}no-cover{{/if}}">
            <h2 class="post-title"><a href="{{url}}" data-postid="{{id}}">{{title}}</a></h2>
        </header>
        <section class="post-excerpt">
            <p>{{excerpt characters="130"}}...<a href="{{url}}" alt="Read more">Read more</a></p>
        </section>
        <hr>
        <footer class="post-meta">
            {{tags}}
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD.MMMM.YYYY"}}</time>
        </footer>
    </article>
    {{/foreach}}
</div>

{{! Previous/next page links - displayed on every page }}
{{pagination}}